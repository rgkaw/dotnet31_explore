@model mvc.Models.Event.PaginateEventSchedule

@{
    ViewData["Title"] = "Event";
}

<h2>Event List</h2>
<p>
    <button class="btn btn-outline-dark" data-toggle="modal" data-target="@("#CreateEventSchedules")" data-url="@Url.Action($"Create","Book")">Create</button>
    @await Html.PartialAsync("Modal/_CreateEventSchedule",new mvc.Models.Event.EventSchedule())
</p>
<div class="row">
    <div class="col">
        <form asp-controller="Book" asp-action="Index">
            <div class="input-group col">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">keyword</span>
                </div>

                <input type="text" class="form-control" placeholder="search by author or book title" aria-describedby="basic-addon2" name="search" asp-for="@Model.Pagination.Search">

                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">search</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-sm-2">
        <a asp-action="Download" class="btn btn-primary">Download</a>
    </div>
</div>



<!-- Button trigger modal -->
<!-- Modal -->


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(name => Model.EventSchedule.First().Event.Name)
            </th>
            <th>
                @Html.DisplayNameFor(name => Model.EventSchedule.First().Start)
            </th>
            <th>
                @Html.DisplayNameFor(name => Model.EventSchedule.First().End)
            </th>

        </tr>


    </thead>
    <tbody>
        @foreach (var item in Model.EventSchedule)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                <td>
                    <a class="btn btn-primary" data-toggle="modal" data-target="@("#EditEventSchedule-" + item.Guid)" data-url="@Url.Action($"Edit","Event",item.Guid)">Edit</a>
                    @await Html.PartialAsync("_EditEventSchedule", item)
                    <a class="btn btn-danger" data-toggle="modal" data-target="@("#DeleteEventSchedule-" + item.Guid)" data-url="@Url.Action($"Delete","Event",item.Guid)">Delete</a>
                    @await Html.PartialAsync("_DeleteEventSchedule",item)

                </td>
            </tr>
        }
    </tbody>

</table>

@Html.Partial("_pagination",Model.Pagination)


