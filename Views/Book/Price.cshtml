@model List<Book>

<canvas id="myChart" style="width:100%;max-width:720px;height:100%;max-height:500px"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="text/javascript">
  	const ctx = document.getElementById('myChart');
	const data = @Json.Serialize(Model)
	const label = []
	const value = []

	for (i of data){
		label.push(i.title)
		value.push(i.price)
	}
	console.log(label);
	console.log(value);
	new Chart("myChart", {
		type: 'bar',
		data: {
			labels: label,
			datasets: [{
				label: 'Book Price',
				data: value,
			}]
		},
		options: {
			scales: {
				y: {
				beginAtZero: true
				}
			}
		}
	});
</script>

