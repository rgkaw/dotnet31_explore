@model PaginateBook

@{
    ViewData["Title"] = "BookList";
}

<h2>BookList</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<a href="/Book/Download" class="btn btn-primary text-right">Download</a>
<table class="table">
    <thead>
        <th>
            @Html.DisplayNameFor(name => Model.Book.First().Id)
        </th>
        <th>
            @Html.DisplayNameFor(name => Model.Book.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(name => Model.Book.First().Author)
        </th>
        
    </thead>
    <tbody>    
    @foreach (var item in Model.Book)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a class= "btn btn-primary"asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }</tbody>

</table>
@Html.Partial("_pagination",Model.Pagination)


